{
	"name": "@harsh-js/express-ts-app",
	"version": "1.0.0",
	"description": "A one stop solution for all your needs",
	"bin": "./bin/cli.js",
	"main": "index.js",
	"nodemonConfig": {
		"ignore": [
			"**/*.test.ts",
			"**/*.spec.ts",
			".git",
			"node_modules"
		],
		"watch": [
			"src"
		],
		"exec": "node -r tsconfig-paths/register -r ts-node/register",
		"ext": "ts, js"
	},
	"scripts": {
		"test": "nodemon src/test/index.ts",
		"watch": "tsc-alias -w & tsc -w",
		"build": "tsc && tsc-alias",
		"socket": "nodemon src/socket/app.ts",
		"app": "nodemon src/client/app.ts",
		"cron": "nodemon src/socket/cron.ts",
		"dev": "npm-run-all --parallel app",
		"push": "node -r tsconfig-paths/register -r ts-node/register src/git/push.ts",
		"migrate": "node -r tsconfig-paths/register -r ts-node/register src/db/migrate.ts"
	},
	"devDependencies": {
		"@types/chalk-animation": "^1.6.1",
		"@types/cors": "^2.8.12",
		"@types/express-fileupload": "^1.4.1",
		"@types/figlet": "^1.5.4",
		"@types/http-errors": "^1.8.1",
		"@types/lodash": "^4.14.191",
		"@types/mongoose-sequence": "^3.0.7",
		"@types/morgan": "^1.9.3",
		"@types/response-time": "^2.3.5",
		"nodemon": "^2.0.18",
		"npm-run-all": "^4.1.5",
		"ts-node": "^10.8.1",
		"tsconfig-paths": "^4.0.0",
		"typescript": "^4.4.4"
	},
	"dependencies": {
		"agenda": "^5.0.0",
		"aws-sdk": "^2.1309.0",
		"axios": "^0.27.2",
		"bcryptjs": "^2.4.3",
		"body-parser": "^1.20.0",
		"chalk-animation": "^2.0.2",
		"cors": "^2.8.5",
		"deep-equal": "^2.2.0",
		"dotenv": "^10.0.0",
		"express": "^4.18.2",
		"express-fileupload": "^1.4.0",
		"figlet": "^1.5.2",
		"form-data": "^4.0.0",
		"http-errors": "^1.7.2",
		"ioredis": "^5.0.5",
		"joi": "^17.6.0",
		"lodash": "^4.17.21",
		"moment": "^2.29.4",
		"mongoose": "^6.9.0",
		"mongoose-sequence": "^5.3.1",
		"nodemon": "^2.0.19",
		"random-indian-name": "^1.0.0",
		"response-time": "^2.3.2",
		"say": "^0.16.0",
		"simple-git": "^3.16.1",
		"socket.io": "^4.5.1",
		"tsc-alias": "^1.6.7",
		"unique-names-generator": "^4.7.1"
	}
}
